<UserControl
	x:Class="Hipstr.Client.Views.ListGroupJumpDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:system="using:System"
	mc:Ignorable="d">

	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/Styles/Colors.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>

	<Grid>
		<Border Background="Black" Opacity="0.75" />
		<GridView ItemsSource="{x:Bind _groupHeaders, Mode=OneWay}" SelectionMode="None">
			<GridView.ItemTemplate>
				<DataTemplate x:DataType="system:String">
					<TextBlock Text="{x:Bind}"
					           Foreground="White"
					           FontSize="36"
					           Tapped="HeaderTextBlock_OnTapped"
					           IsTextSelectionEnabled="False" />
				</DataTemplate>
			</GridView.ItemTemplate>
			<GridView.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapGrid MaximumRowsOrColumns="4"
					          Orientation="Horizontal"
					          HorizontalChildrenAlignment="Stretch"
					          VerticalChildrenAlignment="Stretch"/>
				</ItemsPanelTemplate>
			</GridView.ItemsPanel>
		</GridView>
	</Grid>
</UserControl>