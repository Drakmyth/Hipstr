<Page
	x:Class="Hipstr.Client.Views.Teams.TeamsView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:models="using:Hipstr.Core.Models"
	xmlns:teams="using:Hipstr.Client.Views.Teams"
	xmlns:converters="using:Hipstr.Client.Converters"
	xmlns:core="using:Microsoft.Xaml.Interactions.Core"
	xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
	mc:Ignorable="d">

	<Page.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/Styles/Colors.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Page.Resources>

	<Grid Background="{StaticResource HipChatBackground}"
	      d:DataContext="{d:DesignData Source=/SampleData/TeamsViewModelSampleData.xaml}">
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<ListView Grid.Row="0" ItemsSource="{x:Bind ViewModel.Teams}" Holding="OnTeamRightTapped">
			<ListView.ItemTemplate>
				<DataTemplate x:DataType="models:Team">
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="{x:Bind Name}"
						           Foreground="White" />
					</StackPanel>
				</DataTemplate>
			</ListView.ItemTemplate>
			<ListView.Resources>
				<Style x:Key="DeleteFlyoutPresenterStyle" TargetType="MenuFlyoutPresenter">
					<Setter Property="Background" Value="{StaticResource HipChatControl}" />
					<Setter Property="Foreground" Value="White" />
				</Style>
				<MenuFlyout x:Name="DeleteFlyout" MenuFlyoutPresenterStyle="{StaticResource DeleteFlyoutPresenterStyle}">
					<MenuFlyout.Items>
						<MenuFlyoutItem Text="Delete"
						                Background="{StaticResource HipChatControl}"
						                Foreground="White"
						                Command="{x:Bind ViewModel.DeleteTeamCommand}"
						                CommandParameter="{x:Bind ViewModel.TappedTeam, Mode=OneWay}" />
					</MenuFlyout.Items>
				</MenuFlyout>
			</ListView.Resources>
		</ListView>
		<CommandBar Grid.Row="1"
		            Background="{StaticResource HipChatControl}"
		            Foreground="White">
			<AppBarButton Icon="Add"
			              Label="Add Team"
			              Command="{x:Bind ViewModel.AddTeamCommand}"
			              Foreground="White" />
		</CommandBar>
	</Grid>
</Page>