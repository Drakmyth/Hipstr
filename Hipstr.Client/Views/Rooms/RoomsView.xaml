<Page x:Class="Hipstr.Client.Views.Rooms.RoomsView"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:viewModel="using:Hipstr.Client.Views.Rooms"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
	  xmlns:interactions="using:Microsoft.Xaml.Interactions.Core"
	  mc:Ignorable="d">

	<Page.DataContext>
		<viewModel:RoomsViewModel/>
	</Page.DataContext>

	<Page.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/Styles/Colors.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Page.Resources>

	<Grid Background="{StaticResource HipChatBackground}"
		  d:DataContext="{d:DesignData Source=/SampleData/RoomsViewModelSampleData.xaml}">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<ListView Name="RoomList"
				  Grid.Row="0"
				  ItemsSource="{Binding Rooms}">
			<interactivity:Interaction.Behaviors>
				<interactions:EventTriggerBehavior EventName="SelectionChanged"
												   SourceObject="{Binding ElementName=RoomList}">
					<interactions:InvokeCommandAction Command="{Binding NavigateToMessagesViewCommand}"
													  CommandParameter="{Binding ElementName=RoomList, Path=SelectedItem}"/>
				</interactions:EventTriggerBehavior>
			</interactivity:Interaction.Behaviors>
			<ListView.ItemTemplate>
				<DataTemplate>
					<StackPanel>
						<TextBlock Text="{Binding Name}"
								   Foreground="White"/>
						<TextBlock Text="{Binding Team.Name}"
								   Foreground="LightGray"
								   FontSize="10"/>
					</StackPanel>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
		<CommandBar Grid.Row="1"
					Background="{StaticResource HipChatControl}"
					Foreground="White">
			<AppBarButton Icon="Refresh"
						  Label="Refresh"
						  Foreground="White"/>
		</CommandBar>
	</Grid>
</Page>
