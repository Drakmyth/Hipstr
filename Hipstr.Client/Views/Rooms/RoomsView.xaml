<Page x:Class="Hipstr.Client.Views.Rooms.RoomsView"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:viewModel="using:Hipstr.Client.Views.Rooms"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  mc:Ignorable="d">

	<Page.DataContext>
		<viewModel:RoomsViewModel/>
	</Page.DataContext>

	<Page.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/Styles/Colors.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Page.Resources>

	<Grid Background="{StaticResource HipChatBackground}"
		  d:DataContext="{d:DesignData Source=/SampleData/RoomsViewModelSampleData.xaml}">
		<ListView ItemsSource="{Binding Rooms}">
			<ListView.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="{Binding Name}"
								   Foreground="White"
								   Margin="0 0 10 0"/>
						<TextBlock Text="{Binding Team.Name}"
								   Foreground="White"
								   FontSize="6"
								   VerticalAlignment="Bottom"
								   FontWeight="Bold"/>
					</StackPanel>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</Grid>
</Page>
